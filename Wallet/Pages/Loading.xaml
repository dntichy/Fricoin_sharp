<Page x:Class="Wallet.Pages.Loading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wallet"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1100"
      Title="Loading"
      Background="#ebebeb"
      >

    <Grid >
        <StackPanel Width="300" VerticalAlignment="Center">
            <Image Source="../Pictures/logo.png"  Height="190" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <Button Background="DarkSlateGray" BorderBrush="Black" FontSize="18" Width="200" Click="GoToRegistration" Margin="50,0,50,10" Height="40">REGISTRATION</Button>
            <Button Background="DarkSlateGray" BorderBrush="Black" FontSize="18" Click="GoToLoginPage" Height="40" Margin="50,0">LOGIN</Button>
        </StackPanel>
    </Grid>
</Page>
